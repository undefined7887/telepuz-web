.container
    display flex
    flex-direction column
    align-items center

.logo
    font-size 100px
    color #00bcd4

.slogan
    font-weight 300
    font-size 30px
    margin-top 10px
    text-align center
    color #464646

.button
    height 50px
    width 230px
    background #d1d1d1
    margin-top 40px
    display flex
    align-items center
    justify-content center
    color white
    border-radius 10px
    font-size 20px
    cursor pointer
    transition background 0.2s ease

.authors
    margin 30px 0 30px 0
    font-size 16px
    text-align center
    color #bdbdbd

.link
    color #00bcd4