.user
    display flex
    align-items center

.info
    margin-left 18px
    display flex
    flex-direction column

.nickname
    color #424242
    font-size 18px

.status
    font-size 16px

.offline
    color #ffa726

.online
    color #66bb6a

.typing
    color #66bb6a
    display flex
    align-items center

    :last-child
        margin-left 4px

    :nth-child(2)
        animation-delay .1s

    :nth-child(3)
        animation-delay .2s

.circle
    margin-right 4px
    height 6px
    width 6px
    border-radius 50%
    background #66bb6a
    animation-name typing
    animation-duration 0.6s
    animation-iteration-count infinite

@keyframes typing
    0%
        transform scale(1)

    50%
        transform scale(1.3)

    100%
        transform scale(1)