.container
  display flex
  flex-direction column
  align-items center

.logo
  font-size 100px
  color #00BCD4

.slogan
  font-weight 300
  font-size 30px
  margin-top 10px
  text-align center
  color #464646

.form
  margin-top 30px

  .label
    color #bdbdbd
    font-size 18px

  .input
    font-size 18px
    padding-left 20px
    outline none
    border solid #bdbdbd 1px
    border-radius 5px
    margin-top 10px
    height 50px
    width 425px

    &::placeholder
      color #bdbdbd

.button
  height 50px
  width 230px
  background #d1d1d1
  margin-top 40px
  display flex
  align-items center
  justify-content center
  color white
  border-radius 10px
  font-size 20px
  cursor pointer

